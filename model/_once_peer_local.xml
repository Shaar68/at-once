<class name="_once peer local" title="_once peer" protocol_class="_once">
    This is a peer implementation of the @Once Protocol.
    <include filename="license.xml" />

    <state name="start">
        <event name="ENTER" next="ready">
            <action name="on enter" />
        </event>
    </state>

    <state name="ready" inherit="external" />

    <state name="external">
        <event name="ENTER">
            <action name="on enter" />
        </event>

        <event name="JOIN">
            <action name="on join" />
        </event>

        <event name="WHISPER">
            <action name="on whisper" />
        </event>

        <event name="SHOUT">
            <action name="on shout" />
        </event>

        <event name="LEAVE">
            <action name="on leave" />
        </event>

        <event name="EXIT">
            <action name="on exit" />
        </event>
    </state>
</class>